<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
    if user
      User #<%= @user.id %> details
    end
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/users" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_user/<%= @user.id %>" class="btn btn-block btn-outline-secondary">
          Delete user
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Email
      </dt>
      <dd>
        <%= @user.email %>
      </dd>

      <dt>
        Password
      </dt>
      <dd>
        <%= @user.password %>
      </dd>

      <dt>
        Phone number
      </dt>
      <dd>
        <%= @user.phone_number %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit user
    </h2>

    <form action="/modify_user/<%= @user.id %>"  method="post" >
      <div class="form-group">
        <label for="email_box">
          Email
        </label>

        <input type="text" id="email_box" name="email_from_query" class="form-control" value="<%= @user.email %>">
      </div>

      <div class="form-group">
        <label for="password_box">
          Password
        </label>

        <input type="text" id="password_box" name="password_from_query" class="form-control" value="<%= @user.password %>">
      </div>

      <div class="form-group">
        <label for="phone_number_box">
          Phone number
        </label>

        <input type="text" id="phone_number_box" name="phone_number_from_query" class="form-control" value="<%= @user.phone_number %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update user
      </button>
    </form>
  </div>
</div>

<hr>
