<div align="center">
<a href="welcome">Return to Welcome Page</a>
<h1>Please Login</h1>

<h3><a href="users">Create an Account</a></h3>
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">


    <form action="/login" method="post">
      <div class="form-group">
        <label for="email_box">
          Email
        </label>

        <input type="email" id="email_box" name="email_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="password_box">
          Password
        </label>

        <input type="text" id="password_box" name="password_from_query" class="form-control">
      </div>


      <button class="btn btn-block btn-outline-secondary">
        Login
      </button>
    </form>
  </div>
</div>
</div>