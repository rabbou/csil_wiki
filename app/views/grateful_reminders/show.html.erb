<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Grateful reminder #<%= @grateful_reminder.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/grateful_reminders" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_grateful_reminder/<%= @grateful_reminder.id %>" class="btn btn-block btn-outline-secondary">
          Delete grateful reminder
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @grateful_reminder.user_id %>
      </dd>

      <dt>
        Message sent
      </dt>
      <dd>
        <%= @grateful_reminder.message_sent %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@grateful_reminder.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@grateful_reminder.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit grateful reminder
    </h2>

    <form action="/modify_grateful_reminder/<%= @grateful_reminder.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @grateful_reminder.user_id %>">
      </div>

      <div class="form-group">
        <label for="message_sent_box">
          Message sent
        </label>

        <input type="text" id="message_sent_box" name="message_sent_from_query" class="form-control" value="<%= @grateful_reminder.message_sent %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update grateful reminder
      </button>
    </form>
  </div>
</div>

<hr>
